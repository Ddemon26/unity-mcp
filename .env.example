# Unity MCP Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Network Configuration
UNITY_HOST=host.docker.internal
UNITY_PORT=6400
MCP_PORT=6500

# Development ports (for development profile)
DEV_UNITY_PORT=6401
DEV_MCP_PORT=6501

# Logging
LOG_LEVEL=INFO

# Connection Settings
CONNECTION_TIMEOUT=1.0
BUFFER_SIZE=16777216
FRAMED_RECEIVE_TIMEOUT=2.0
MAX_HEARTBEAT_FRAMES=16

# Retry Settings
MAX_RETRIES=10
RETRY_DELAY=0.25
RELOAD_RETRY_MS=250
RELOAD_MAX_RETRIES=40

# Telemetry (set DISABLE_TELEMETRY=true to disable)
TELEMETRY_ENABLED=true
TELEMETRY_ENDPOINT=https://api-prod.coplay.dev/telemetry/events
DISABLE_TELEMETRY=false

# Unity Project Path (adjust to your Unity project)
UNITY_PROJECT_PATH=./TestProjects/UnityMCPTests

# Optional custom configuration path
# CONFIG_PATH=./config